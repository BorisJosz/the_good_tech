<h2>Thanks for booking with us, <%= @booking.user.name %></h2>
<h4>Here are the details of your booking:</h4>
<div class="card">
  <div class="bookingsubcard">
  <div class="bookingboxleft">
    <div class="bookingsubfour">

    <%= cl_image_tag @booking.item.photo, height: 100, width: 100, crop: :fill, class:"bookingimage"%>

    </div>

  <div class="bookingsubfive">
    <p><%= @booking.item.description %></p>
    <p><%= @booking.item.price_per_day %>â‚¬</p>
    <p>contact person : <%= @booking.item.owner.name %></p>
</div>
  </div>

  <div class="bookingboxright">
    <div class="bookingbuttonsflex">

      <div>
        <button class="custom-btn btn-5 "><span><%= link_to "to dashboard", user_path(@user), class:"indexlink" %></span>
        </button>
      </div>
      <div>
        <button class="custom-btn btn-5 ">
        <span><%= link_to "leave a review", new_user_booking_review_path(@user, @booking), class:"indexlink" %></span>
        </button>
      </div>
</div>
    </div>
</div>
</div>

<div class="card reviewcard">
  <% unless @booking.reviews.nil? %>
  <h4>Your review for this booking</h4>
  <% @booking.reviews.each do |review| %>
  <%= review.description %>
  <% end %>
  <% end %>
</div>



