<h1>These are our categories</h1>


<% @categories.each do |category| %>
<%= link_to category, root_path(filter: category) %>
<% end %>

<% unless params[:filter].nil? %>
  <% @items.each do |item| %>
  <ul>
    <a><%= link_to item_path(item) do %>
     <%= cl_image_tag item.photo, height: 100, width: 100, crop: :fill %>
     <li><%= item.category %></li>
    <li>Description = <%= item.description %></li>
     <% end %>

  </a>
    <br>
    <br>
  </ul>
  <% end %>
<% end %>
