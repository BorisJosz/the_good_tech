<div class="container">
<h1>Let's make a new item</h1>
<%= simple_form_for @item do |f| %>
  <%= f.input :title %>
  <%= f.input :category, collection: Item.categories %>
  <%= f.input :price_per_day %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "add an item", class: "btn btn-primary" %>
<% end %>
</div>
