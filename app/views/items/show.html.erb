<br>
  <h2>Overview of the item</h2>

  <div class="card">
    <div class="subboxleft">
      <div class="imagediv">
      <%= cl_image_tag @item.photo, height: 400, width: 400, crop: :fill %>
      </div>
    </div>

    <div class="subboxright">
      <h4><b>Object description</b></h4>
      <br>
      <p><b>Category</b> <%= @item.category %></p>
      <p><b>Description</b> <%= @item.description %></p>
      <p><b>Adress</b> <%= @item.address %></p>

      <div class="custom-btn btn-5"><span><%= link_to "Book this item", new_item_booking_path(@item) %></span>

      </div>
    </div>
  </div>

    <% if @show_review %>

   <p>Reviews</p>
    <div class="cardreview">
      <% @bookings.each do |booking|  %>
      <% booking.reviews.each do |review| %>
        <li><%= review.description %></li>
        <% end %>
      <% end %>
    </div>
    <% else %>
      <div class="cardreview">
        <h4>Reviews</h4>
        <br>
        <p>No review yet for this item.</p>
      </div>
    <% end %>

</div>
