<br>
<div class="container show">
<p>Overview of the item</p>

  <div class="card">

    <div class="cardpicture"><%= cl_image_tag @item.photo, height: 300, width: 400, crop: :fill %></div>

    <div class="cardinfo">
      <h4><b>Object description</b></h4>
      <p><b>Category</b> <%= @item.category %></p>
      <p><b>Description</b> <%= @item.description %></p>
      <p><b>Adress</b> <%= @item.address %></p>
      <div><button type="button" class="btn btn-light"><%= link_to "Book this item", new_item_booking_path(@item) %></button>
      </div>
    </div>
  </div>
</div>
